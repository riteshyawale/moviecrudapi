@model MyMovieApp.Entity.ThetreModel;
@{
    ViewData["Title"] = "EditTheater";
}

<h1>EditTheater</h1>



<form method="post">
    <div class="form-group">
        <label>
            Theater Title
        </label>
        <input type="text" class="form-control" asp-for="TheaterName"/>
    </div>

    <div class="form-group">
        <label>
            Theater Movies
        </label>
        <input type="text" class="form-control" asp-for="TheaterMovies" />
    </div>

    <div class="form-group">
        <label>
            Theater Address
        </label>
        <input type="text" class="form-control" asp-for="TheaterAddress"/>
    </div>


    

    <input type="submit" value="Updates" class="btn btn-primary" />
    <input type="button" value="Reset" class="btn btn-primary" />
</form>