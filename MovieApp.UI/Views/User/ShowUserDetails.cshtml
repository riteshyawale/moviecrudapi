@model IEnumerable<MyMovieApp.Entity.UserModel>;
@{
    ViewData["Title"] = "ShowUserDetails";
}

<h1>This is My First Page</h1>


<table class="table table-border">
    <thead>
        <tr>
            <th>User Id</th>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Email</th>
            <th>Mobile</th>
             <th>Edit</th>
            <th>Delete</th>
        </tr>
    </thead>


    <tbody>
@{
    foreach(var item in Model)
    {
        
        <tr>
            <th>@item.UserId</th>
            <th>@item.FirstName</th>
            <th>@item.LastName</th>
            <th>@item.Email</th>
            <th>@item.Mobile</th>
            <th><a asp-controller="User" asp-action="EditUser" asp-route-UserId="@item.UserId">Edit</a></th>
            <th><a asp-controller="User" asp-action="DeleteUser" asp-route-UserId="@item.UserId">Delete</a></th>
        </tr>
    }
}
</tbody>
</table>